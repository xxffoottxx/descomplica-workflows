# n8n Configuration
N8N_HOST=localhost
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/
TIMEZONE=Atlantic/Azores
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme

# PostgreSQL Configuration
POSTGRES_USER=admin
POSTGRES_PASSWORD=changeme
POSTGRES_DB=ai_agents_db

# n8n Database Connection (existing PostgreSQL)
DB_POSTGRESDB_USER=your_db_user
DB_POSTGRESDB_PASSWORD=your_db_password

# pgAdmin Configuration (if enabled)
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin

# Backend API Configuration
API_PORT=3000
API_HOST=localhost

# Demo Site Configuration
DEMO_SITE_PORT=8080

# AI Services Configuration

# Ollama (Local Testing) - Free, runs on your machine
# Install Ollama from https://ollama.ai
# Start with: ollama serve
OLLAMA_HOST=http://host.docker.internal:11434  # For Docker to access host Ollama
# OLLAMA_HOST=http://localhost:11434           # For local development
OLLAMA_MODEL=llama3.2                          # or mistral, codellama, etc.

# Google Gemini (Production/Demos) - Free tier available
# Get API key from: https://ai.google.dev/
GOOGLE_API_KEY=your_google_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash                  # Free tier model

# Default LLM Provider Selection
# Set to 'ollama' for local testing or 'gemini' for demos
LLM_PROVIDER=ollama

# Flowise Configuration
FLOWISE_PORT=3000
FLOWISE_USERNAME=admin
FLOWISE_PASSWORD=changeme
FLOWISE_SECRETKEY_OVERWRITE=your_secret_key_here
FLOWISE_DB_NAME=flowise

# Optional: Other AI Service Keys
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# COHERE_API_KEY=
# HUGGINGFACE_API_KEY=
